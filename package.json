{
  "name": "iceworks-next",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "extensions/*",
    "app"
  ],
  "scripts": {
    "setup": "lerna clean --yes && npm run packages:build && npm run link",
    "link": "lerna link",
    "test": "jest",
    "install:deps": "rm -rf node_modules && ELECTRON_MIRROR=https://cdn.npm.taobao.org/dist/electron/ SASS_BINARY_SITE=https://npm.taobao.org/mirrors/node-sass/ yarn install",
    "packages:watch": "ts-node ./scripts/watch.ts",
    "packages:build": "npm run packages:clean && ts-node ./scripts/build.ts",
    "packages:clean": "rm -rf ./packages/*/lib",
    "publish": "npm run packages:build && lerna publish",
    "publish:beta": "npm run packages:build && lerna publish --dist-tag beta",
    "app:start": "electron ./app",
    "app:build": "concurrently 'tsc --build ./app/main/tsconfig.json' 'cd app && icejs build'",
    "app:watch": "concurrently 'tsc --build ./app/main/tsconfig.json -w' 'cd app && icejs start'",
    "lint": "eslint --cache --ext .ts,.tsx ./",
    "coverage": "codecov"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run lint",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imsobear/iceworks-next.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/imsobear/iceworks-next/issues"
  },
  "homepage": "https://github.com/imsobear/iceworks-next#readme",
  "devDependencies": {
    "@ice/spec": "^1.0.1",
    "@types/execa": "^2.0.0",
    "@types/jest": "^25.1.3",
    "codecov": "^3.6.5",
    "commitlint": "^8.3.5",
    "concurrently": "^5.1.0",
    "electron": "^8.0.2",
    "eslint": "^6.8.0",
    "execa": "^4.0.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "nsfw": "^1.2.7",
    "stylelint": "^13.2.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  }
}
